<style type="text/css">
.style_image {
    width: 400px;
    height: 300px;
  }
</style>

<div class="events-panel container">
  <% if flash[:error] %>
    <br>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      Error: <%= flash[:error] %>
    </div>
  <% end %>

  <%= link_to 'Go to Organizer Dashboard', tournament_path(id: params[:tournament_id]), data: { turbolinks: false } %>

  <h2>Tournament Profile Pictures</h2>
  <%= render 'tournament_profile_pictures/uploadpicture'%>
  <br></br>
  <%= link_to 'Continue', new_tournament_tournament_event_path(id: params[:tournament_id]), data: { turbolinks: false }, class: "btn btn-success"%>

  <h2> Uploaded Profile Pictures </h2>
  <%=render  'tournament_profile_pictures/list', tournament_profile_pictures: @tournament.tournament_profile_pictures %>
</div>
