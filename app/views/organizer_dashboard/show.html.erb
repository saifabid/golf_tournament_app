<!DOCTYPE HTML>
<html>
  <head>
    <style type="text/css">
      .col-centered{
        float: none;
        margin: auto;
      }
      .center-text{
      text-align: center
      }
      </style>
  </head>
</html>

<h1>Organiser Dashboard</h1>
<%=render('layouts/event_organizer_header') %>

<% if @is_private == true %>
     <%= render "organizer_dashboard/send_password_modal" %>
  <div class = center-text>
    <button type="button" class="btn-success btn-sm" data-toggle="modal" data-target=<%= "#sendpassword#{params[:id]}" %> >Send Password by Email</button>
   </div>
<% end %>

<% if @tournament.player_questionnaire %>
    <%= link_to "Setup your Survey", {:controller => 'organizer_dashboard', :action => 'survey_setup'}, :method => :post %>
    <br>
    <%= link_to "View Survey Answers", {:controller => 'organizer_dashboard', :action => 'survey_answers'}, :method => :post %>
<% end %>

<div class = center-text>
  <% if @tournament.organizer_paid != true && Time.now.strftime("%d-%m-%Y %H:%M:%S") > @tournament.start_date%>
      <%= button_to "Tournament Outstanding Balance, Pay Here", {:controller => 'organizer_payment', :action => "show"}, :method => :get %>
  <% end %>
</div>

<%= render "organizer_dashboard/users_table",  users: @all_tournament_players, current_player: @current_player %>
<div class = center-text>

    <thead>
      <tr>
        <th> Player Tickets Left: <%= @tournament.tickets_left %>, </th>
        <th> Spectator Tickets Left: <%= @tournament.spectator_tickets_left %>,</th>
        <th> Dinner Tickets Left: <%= @tournament.dinner_tickets_left %></th>
      </tr>
    </thead>

  <%= button_to "Reload Tickets Left", {:controller => 'organizer_dashboard', :action => "show"}, :method => :get %>

</div>

<div class = center-text>

  <%= button_to 'Signup', {:controller => "signup", :action => "signup_from_tournament", :id => params[:id]} , :method=>:get %>

  <%= render_shareable :buttons=> ['twitter', 'linkedin'], :url => request.original_url.sub('organizer_dashboard', 'tournaments')%>

</div>

<% if @is_private == true %>
  <div class = center-text>
  The password to your event is: <%= @private_event_password %>
  </div>
<% end %>
