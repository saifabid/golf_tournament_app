<div class="events-panel container">
  <% if flash[:error] %>
    <br>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      Error: <%= flash[:error] %>
    </div>
  <% end %>
  
  <%= link_to 'Go to Organizer Dashboard', tournament_path(id: params[:tournament_id]), data: { turbolinks: false } %>

  <h2>Tournament Agenda</h2>
  <h2>Create New Event</h2>
  <%= render 'tournament_events/createevent'%>
  <br></br>
  <%= link_to "Continue", new_tournament_tournament_feature_path(Tournament.find(params[:tournament_id])), class: "btn btn-success"  %>
  <h2> Current Agenda </h2>
  <%=render  'tournament_events/list', tournament_events: @tournament.tournament_events %>
</div>
