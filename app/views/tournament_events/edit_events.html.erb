<div class="events-panel container">
  <% if flash[:error] %>
    <br>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      Error: <%= flash[:error] %>
    </div>
  <% end %>

  <%= link_to 'Go Back To Organizer Dashboard', organizer_dashboard_path(id: params[:id]), data: { turbolinks: false } %>

  <h2>Edit Tournament Agenda</h2>
  <br></br>
  <h7>Create New Event</h7>
  <%= render 'tournament_events/createevent'%>
  <br></br>
  <h2> Current Agenda </h2>
  <%=render  'tournament_events/list', tournament_events: @tournament.tournament_events %>
</div>
