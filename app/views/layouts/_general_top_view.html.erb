<div class="center-block events-container">
      <% @top_tourneys.each do |tournament| %>
    <div class="col-md-3 col-sm-12">
      <a href="<%=tournament_path(tournament)%>" data-turbolinks="false">
      <div class="card">

        <div class="card-image">
          <% if tournament.logo%><%= image_tag tournament.logo, :class=> 'img-responsive' %>
          <% else %>
              <%= image_tag "default-golf-logo.png", :class=> 'img-responsive' %>
              </div>
              <% end%>

      <div class="card-title" >
        <%= tournament.name %>
        </div>

        <br />
        <% if !tournament.details.blank? %>
          <a id= "hide-<%=tournament.id%>" href="" onclick="toggle_visibility('details-<%=tournament.id%>','hide-<%=tournament.id%>');return false">Show Details</a>
          <div id="details-<%=tournament.id%>" style="display:none">
              <%= tournament.details %><
          </div>
        <% else %>
        <% end %>

        </div>
      </a>
      </div>
  <% end %>
</div>